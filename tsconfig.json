/* packages/react-components/tsconfig.json */
{
    "compilerOptions": {
      "baseUrl": ".",
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowJs": false,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "downlevelIteration": true,
      "skipLibCheck": true,
      "target": "es5",
      "outDir": "lib",
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": false,
      "strict": false,
      "lib": [
        "es2015",
        "es2016",
        "es2017",
        "es2018",
        "esnext",
      ],
      "paths": {
        "*": [
          "node_modules",
          "node_modules/@types/*",
          "src/*",
          "*"
        ]
      }
    },
    "include": ["typings", "src/**/*.ts"],
    "exclude": ["src/**/*.test.ts"]
  }
  